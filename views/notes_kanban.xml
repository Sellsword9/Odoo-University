<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <!-- View -->
  <record id="university_notes_kanban"
          model="ir.ui.view">
    <field name="name">Notes Kanban</field>
    <field name="model">university.notes</field>
    <field name="arch"
           type="xml">
      <kanban>
        <t t-name="card">
          <div class="oe_kanban_global_click">
            <div class="o_kanban_record">
              <div class="o_kanban_details">
                <!--  Notes are kinda trivial to show in a kanban -->
                <div>
                  <h3>
                    <field name="student" />
                    <br />
                    <field name="note" />
                    <br />
                    <field name="enroll_id" />
                  </h3>
                </div>
              </div>
            </div>
          </div>
        </t>
      </kanban>
    </field>

  </record>
  <!-- Action -->
  <record id="university_notes_kanban_action"
          model="ir.actions.act_window">
    <field name="name">Notes Kanban</field>
    <field name="res_model">university.notes</field>
    <field name="view_mode">kanban</field>
  </record>

</odoo>