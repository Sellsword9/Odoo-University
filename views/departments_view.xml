<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="university.departments_view_form" model="ir.ui.view">
            <field name="name">university.departments.view.form</field>
            <field name="model">university.departments</field>
            <field name="arch" type="xml">
                <form string="departments">
                    <sheet>
                        <group>
                            <field name="name"></field>
                            <field name="university_id"></field>
                            <field name="professors" widget="many2many_tags"></field>
                            <field name="head"></field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>