<?xml version="1.0" encoding="UTF-8"?>
<odoo><!-- View -->
  <record id="university_professors_kanban" model="ir.ui.view">
    <field name="name">Professors Kanban</field>
    <field name="model">university.professors</field>
    <field name="arch" type="xml">
      <kanban>
        <field name="is_head" invisible="1"/>
        <t t-name="card">
          <div class="oe_kanban_global_click">
            <div class="o_kanban_record">
              <div class="o_kanban_details">
                <div style="padding: 5px; max-width: 100%; height: 20rem; overflow: hidden; display: flex; align-items: center; justify-content: center;">
                  <field name="image" widget="image" options="{&quot;zoom&quot;: 1}" style="height: 20rem; width: auto; border: 1px solid white;"/>
                </div>
                <strong>
                  <field name="name"/>
                </strong>
                <div> University: <field name="university_id"/>
                </div>
                <div>
                  <t t-if="is_head">
                    <h4> Head of: <field name="department_id"/>
                    </h4>
                  </t>
                  <t t-if="!is_head">
                    <div> Professor of: <field name="department_id"/>
                    </div>
                  </t>
                </div>
              </div>
            </div>
          </div>
        </t>
      </kanban>
    </field>
  </record><!-- Action -->
  <record id="university_professors_kanban_action" model="ir.actions.act_window">
    <field name="name">Professors Kanban</field>
    <field name="res_model">university.professors</field>
    <field name="view_mode">kanban</field>
    <field name="domain">[('university_id', '=?', context.get('search_id'))]</field>
  </record>
</odoo>