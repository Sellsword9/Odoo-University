<?xml version="1.0" encoding="UTF-8"?>
<odoo><!-- View -->
  <record id="university_students_kanban" model="ir.ui.view">
    <field name="name">Students Kanban</field>
    <field name="model">university.students</field>
    <field name="arch" type="xml">
      <kanban>
        <t t-name="card">
          <div class="oe_kanban_global_click">
            <div class="o_kanban_record">
              <div class="o_kanban_details">
                <div style="padding: 5px; max-width: 100%; height: 20rem; overflow: hidden; display: flex; align-items: center; justify-content: center;">
                  <field name="image" widget="image" options="{&quot;zoom&quot;: 1}" style="height: 100%; width: auto; border: 1px solid white;"/>
                </div>
                <strong>
                  <field name="name"/>
                </strong>
                <div>
                  <field name="street"/>
                </div>
                <div>
                  <field name="postal_code"/>
                </div>
                <div>
                  <field name="country"/>
                </div>
                <div>
                  <field name="tutor"/>
                </div>
              </div>
            </div>
          </div>
        </t>
      </kanban>
    </field>
  </record><!-- Action -->
  <record id="university_students_kanban_action" model="ir.actions.act_window">
    <field name="name">Students Kanban</field>
    <field name="res_model">university.students</field>
    <field name="view_mode">kanban</field>
    <field name="domain">[(&apos;university_id&apos;, &apos;=?&apos;, context.get(&apos;search_id&apos;))]</field>
  </record>
</odoo>