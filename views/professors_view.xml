<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="university.professors_view_form" model="ir.ui.view">
            <field name="name">university.professors.view.form</field>
            <field name="model">university.professors</field>
            <field name="arch" type="xml">
                <form string="Professors">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                        <button name="university.university_enrolls_kanban_action"
                            type="action"
                            class="stat_button"
                            icon="fa-envelope"
                            context="{'search_id': id}">
                            <field name="enroll_count" style="text-align: center;" />
                        </button>
                        </div>
                        <notebook>
                            <page string="General Information">
                                <group>
                                    <label for="name" string="Professor Name" />
                                    <field name="name" />
                                </group>
                                <group>
                                    <field name="image" widget="image" />
                                </group>
                                <group>
                                    <h3>Data</h3>
                                    <field name="university_id"
                                             placeholder="University" />
                                    <field name="department_id" />
                                    <field name="is_head" string="Head of department: " />
                                    <field name="subjects"
                                                placeholder="Subjects" />
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
