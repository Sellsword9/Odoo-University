<?xml version="1.0" encoding="UTF-8"?>
<odoo><!-- View -->
  <record id="university_subjects_kanban"
          model="ir.ui.view">
    <field name="name">Subjects Kanban</field>
    <field name="model">university.subjects</field>
    <field name="arch"
           type="xml">
      <kanban>
        <t t-name="card">
          <div class="oe_kanban_global_click">
            <div class="o_kanban_record">
              <div class="o_kanban_details">
                <h2>
                  <field name="name" />
                </h2> in <h3>
                  <field name="university_id" />
                </h3>
              </div>
            </div>
          </div>
        </t>
      </kanban>
    </field>
  </record><!--
  Action -->
  <record id="university_subjects_kanban_action"
          model="ir.actions.act_window">
    <field name="name">Subjects Kanban</field>
    <field name="res_model">university.subjects</field>
    <field name="view_mode">kanban</field>
  </record>
</odoo>