<odoo>
    <data>
        <record id="university.email_template_student" model="mail.template">
            <field name="name">Student Information Email</field>
            <field name="model_id" ref="university.model_university_students"/>
            <field name="subject">Student Information</field>
            <field name="email_from">${object.tutor_id.email |safe}</field>
            <field name="email_to">${object.email |safe}</field>
            <field name="body_html"><![CDATA[
                <p>Dear ${object.name},</p>
                <p>Here is your student information:</p>
                <ul>
                    <li><strong>Name:</strong> ${object.name}</li>
                    <li><strong>Average:</strong> ${object.average | float}</li>
                    <li><strong>University:</strong> ${object.university_id.name}</li>
                    <li><strong>Tutor:</strong> ${object.tutor_id.name}</li>
                    <li><strong>Postal Code:</strong> ${object.postal_code}</li>
                    <li><strong>Country:</strong> ${object.country_id.name}</li>
                    <li><strong>Province:</strong> ${object.province}</li>
                    <li><strong>City:</strong> ${object.city}</li>
                    <li><strong>Street:</strong> ${object.street}</li>
                </ul>
                <p>Best regards,</p>
                <p>${object.tutor_id.name}</p>
            ]]></field>
        </record>
    </data>
</odoo>
