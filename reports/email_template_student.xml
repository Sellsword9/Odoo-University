<odoo>
    <data>
        <record id="university.email_template_student" model="mail.template">
            <field name="name">Student Information Email</field>
            <field name="model_id" ref="university.model_university_students"/>
            <field name="subject">Student Information</field>
            <field name="email_from">${object.tutor_id.email |safe}</field>
            <field name="email_to">${object.email |safe}</field>
            <field name="auto_delete" eval="False"/>
            <field name="body_html" type="html">
                <div>
                    <h3>Dear <t t-out="object.name"/></h3>

                    <p>Here is your information:</p>
                </div>
            </field>
        </record>
    </data>
</odoo>
